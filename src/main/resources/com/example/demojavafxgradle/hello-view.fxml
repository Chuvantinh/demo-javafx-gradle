<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>


    <VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
          maxHeight="-Infinity" maxWidth="-Infinity"
          fx:controller="com.example.demojavafxgradle.HelloController"
          styleClass="my-VBox">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <MenuBar>
            <Menu text="File">
                <MenuItem text="New" onAction="#handleNewAction"/>
                <MenuItem text="Open" onAction="#handleOpenAction"/>
                <MenuItem text="Exit" onAction="#handleExitAction"/>
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Cut" onAction="#handleCutAction"/>
                <MenuItem text="Copy" onAction="#handleCopyAction"/>
                <MenuItem text="Paste" onAction="#handlePasteAction"/>
            </Menu>
        </MenuBar>

        <Label fx:id="welcomeText" text="Click the button to change this text" style="-fx-font: 26px 'Arial'"/>
        <Button text="Hello!" onAction="#onHelloButtonClick"/>

        <Button text="Switch to Order Controller Form" onAction="#switchToOrderView"></Button>

        <PasswordField fx:id="txtPassword" text="password">Password</PasswordField>
        <TextArea fx:id="textareaWelcome">Textarea</TextArea>
        <CheckBox fx:id="ckWelcome">is checkbox</CheckBox>
        <ToggleButton>Toggle Button</ToggleButton>
        <RadioButton text="Option 1" fx:id="radioWelcome" onAction="#handRadioWelcome">

        </RadioButton>

        <RadioButton text="Option 2" fx:id="radioWelcome2" >

        </RadioButton>

        <ListView fx:id="listView" prefHeight="200" prefWidth="200">

        </ListView>

        <ImageView fx:id="imageViewWelcome" fitWidth="300" preserveRatio="true">

        </ImageView>

    </VBox>