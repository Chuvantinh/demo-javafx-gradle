<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.orders.vantinh.controllers.ProductNew">
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
           <VBox alignment="TOP_CENTER" spacing="10" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="50">
              <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="New Product Form" />

               <!-- SKU Name -->
               <HBox spacing="10">
                   <HBox>
                       <Label text="SKU" />
                       <TextField fx:id="SKU" minHeight="40.0" minWidth="400.0" promptText="SKU" />
                   </HBox>
               </HBox>

               <HBox spacing="10">
                   <HBox>
                       <Label text="WP_ID:" />
                       <TextField fx:id="WP_ID" minHeight="40.0" minWidth="400.0" promptText="wordpress ID" />
                   </HBox>
               </HBox>

              <!-- Product Name -->
              <HBox spacing="10">
                  <HBox>
                      <Label text="Product Name:" />
                      <TextField fx:id="productName" minHeight="40.0" minWidth="400.0" promptText="Enter product name" />
                  </HBox>
              </HBox>
               
               <HBox spacing="10">
                  <HBox>
                      <Label text="Product Name Vietnam:" />
                      <TextField fx:id="productNameVN" minHeight="40.0" minWidth="400.0" promptText="Enter product name Vietnam" />
                  </HBox>
              </HBox>

               <!-- Product Short Description -->
               <HBox spacing="10">
                   <VBox>
                       <Label text="Short Description:" />
                       <TextArea fx:id="productShortDescription" promptText="Enter product description" />
                   </VBox>

                   <VBox>
                       <Label text="Description:" />
                       <TextArea fx:id="productDescription" promptText="Enter product description" />
                   </VBox>
               </HBox>

               <!-- Category -->
               <HBox alignment="CENTER_LEFT" spacing="10">
                   <Label text="Category:">
                  <padding>
                     <Insets bottom="20.0" top="20.0" />
                  </padding></Label>
                   <ComboBox fx:id="categoryComboBox">

                   </ComboBox>
               </HBox>

               <!-- Image -->
               <HBox alignment="CENTER_LEFT" prefHeight="91.0" prefWidth="1184.0" spacing="10">
                   <VBox>
                       <Label text="Product Image:" />
                       <Button fx:id="uploadImageButton" onAction="#handleImageUpload" text="Upload Image" />
                   </VBox>

                   <VBox>
                       <Label text="Seleted Image" />
                       <ImageView fx:id="imageView" fitHeight="200" fitWidth="200" preserveRatio="true" />
                   </VBox>
               <padding>
                  <Insets bottom="50.0" top="50.0" />
               </padding>
               </HBox>

               <HBox spacing="10">
                   <VBox>
                       <Label text="Stock:" />
                       <TextField fx:id="productStock" promptText="Enter productStock" />
                   </VBox>
               </HBox>

               <HBox spacing="10">
                   <VBox>
                       <Label text="Stock:" />
                       <TextField fx:id="productTax" promptText="Enter Tax" />
                   </VBox>

                   <VBox>
                       <Label text="Stock:" />
                       <TextField fx:id="productBrand" promptText="Enter brand" />
                   </VBox>
               </HBox>

               <HBox alignment="CENTER" spacing="5.0">
                   <VBox style="-fx-background-color: #34eb37;">
                       <Label text="Piece" />
                       <Label text="Package, Bags" />
                       <Label text="quantityInBaseUnit">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin></Label>
                       <TextField fx:id="PquantityInBaseUnit" promptText="Enter quantityInBaseUnit: 1" />

                       <Label text="unitRegularPrice">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin></Label>
                       <TextField fx:id="PunitRegularPrice" promptText="Enter unitRegularPrice: " />

                       <Label text="unitSalePrice">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin></Label>
                       <TextField fx:id="PunitSalePrice" promptText="Enter unitSalePrice: " />

                       <Label text="unitBuyPrice" />
                       <TextField fx:id="PunitBuyPrice" promptText="Enter unitBuyPrice: " />
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
                   </VBox>

                   <VBox style="-fx-background-color: #66594e;">
                       <Label text="Box" />
                       <Label text="6 or 12 or more Pieces" />
                       <Label text="quantityInBaseUnit">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin></Label>
                       <TextField fx:id="BquantityInBaseUnit" promptText="Enter quantityInBaseUnit: 1" />

                       <Label text="unitRegularPrice">
                     <padding>
                        <Insets bottom="5.0" top="10.0" />
                     </padding></Label>
                       <TextField fx:id="BunitRegularPrice" promptText="Enter unitRegularPrice: " />

                       <Label text="unitSalePrice">
                     <padding>
                        <Insets bottom="5.0" top="10.0" />
                     </padding></Label>
                       <TextField fx:id="BunitSalePrice" promptText="Enter unitSalePrice: " />

                       <Label text="unitBuyPrice" />
                       <TextField fx:id="BunitBuyPrice" promptText="Enter unitBuyPrice: " />
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
                   </VBox>

                   <VBox style="-fx-background-color: #d16d0f;">
                       <Label text="Carton" />
                       <Label text="24 or 30 Pieces in Carton" />
                       <Label text="quantityInBaseUnit">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin></Label>
                       <TextField fx:id="CquantityInBaseUnit" promptText="Enter quantityInBaseUnit: 1" />

                       <Label text="unitRegularPrice">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin></Label>
                       <TextField fx:id="CunitRegularPrice" promptText="Enter unitRegularPrice: " />

                       <Label text="unitSalePrice">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin></Label>
                       <TextField fx:id="CunitSalePrice" promptText="Enter unitSalePrice: " />

                       <Label text="unitBuyPrice">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin></Label>
                       <TextField fx:id="CunitBuyPrice" promptText="Enter unitBuyPrice: " />
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
                   </VBox>
               <opaqueInsets>
                  <Insets bottom="30.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
               </HBox>

               <!-- Save/Submit Button -->
               <Button fx:id="submitButton" onAction="#handleSubmit" text="Save Product" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10" />


          </VBox>
      </ScrollPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
